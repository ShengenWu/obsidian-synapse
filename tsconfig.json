{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "bundler",
    "allowJs": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "types": [
      "svelte"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte"
    // "src/global.d.ts" // implicit in include
  ]
}